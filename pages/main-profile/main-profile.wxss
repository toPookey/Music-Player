
page {
  box-sizing: border-box;
  padding: 30rpx;
  background-color: #f3f3f3;
}

.section {
  
  padding: 30rpx;
  border-bottom: 30rpx;
  background-color: #fff;
  border-radius: 10rpx;

}

.userinfo {
  display: flex;
  align-items: center;
}
.userinfo .avatar {

  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;

}
.userinfo .nickname {
  margin-left: 20rpx;

  font-size: 32rpx;
}

.tabs {
  margin-top: 40rpx;
  display: flex;
  justify-content: space-around ;

}

.tabs .item {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.tabs .item .icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 20rpx;
}

.tabs .item .names {
  /* margin-top: 20 rpx; */
  font-size: 24rpx;
}


